<div class="logincontainer">
<div class="form-signin">
<h2 class="form-signin-heading"><%= I18n.t :change_password %></h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
<%= render "devise/shared/setup_alerts" %>

  <%= f.hidden_field :reset_password_token %>

  <%= f.password_field :password, :autofocus => true, :class => "input-block-level", :placeholder =>(I18n.t :new_password) %>

  <%= f.password_field :password_confirmation :class => "input-block-level", :placeholder =>(I18n.t :confirm_new_password) %>

  	<div class="row-fluid"><%= f.submit (I18n.t :change_my_password), :class=> "btn btn-large btn-primary span12" %>
   <input type=button class="btn btn-large btn-primary span12" value= "<%= I18n.t :cancel%>" onclick= "cancel_button()">
   </div>
<% end %>

<%= render "devise/shared/links" %>
