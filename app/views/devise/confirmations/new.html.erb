<div class="logincontainer">
<div class="form-signin">
<h2 class="form-signin-heading"><%=I18n.t :resend_confirmation_instructions %></h2>

<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
<%= render "devise/shared/setup_alerts" %>


  <%= f.email_field :email, :autofocus => true, :class => "input-block-level", :placeholder => (I18n.t :email_address) %>

   <div class="row-fluid"><%= f.submit (I18n.t :resend_confirmation_instructions), :class=> "btn btn-large btn-primary span12" %>
   <input type=button class="btn btn-large btn-primary span12" value= "<%= I18n.t :cancel%>" onclick= "cancel_button()">
   </div>
<% end %>
