      <% if flash[:notice] or notice %>
          <% if notice == flash[:notice]%>
              <div class="alert" >
              <button type="button" class="close" data-dismiss="alert"><%= t 'times' %></button>
              <%= flash[:notice] %>
              </div>
          <% else %>
            <div class="notice alert">
			<button type="button" class="close" data-dismiss="alert"><%= t 'times' %></button>
			<%= flash[:notice] %>
            <%= notice %>
			</div>
          <% end %>
      <% end %>
      <% if flash[:error] or alert %>
            <% if flash[:error] == alert %>
                <div class="alert alert-error">
                <button type="button" class="close" data-dismiss="alert"><%= t 'times' %></button>
                <%= flash[:error] %>
                </div>
            <% else %>
                <div class="alert  alert-error">
                <button type="button" class="close" data-dismiss="alert"><%= t 'times' %></button>
                <%= flash[:error] %>
                <%= alert %>
                </div>
			<% end %>
      <% end %>
	 
