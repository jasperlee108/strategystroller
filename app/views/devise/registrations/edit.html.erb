<div class="logincontainer" style="background-color: #f5f5f5">
<div class="form-signin">
<h2><%= :edit%><%= t :resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <% if devise_error_messages! != "" %>
  <div class="alert"><%= devise_error_messages! %></div>
  <% end %>

<%= f.text_field :username, :class => "input-block-level", :placeholder => (t :username)%>

  <%= f.email_field :email, :class => "input-block-level", :placeholder => (t :email_address)%>

  <%= f.text_field :business_code, :class => "input-block-level", :placeholder => (t :buisness_code) %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t :currently_awaiting_confirmation_for%><%= resource.unconfirmed_email %></div>
  <% end %>
  <%= f.password_field :password, :autocomplete => "off", :class => "input-block-level", :placeholder => (t :password_unchanged) %>

  <%= f.password_field :password_confirmation, :class => "input-block-level", :placeholder => (t :confirm_password_unchanged) %>

  <%= f.password_field :current_password, :class => "input-block-level", :placeholder =>(t :current_password) %>

   <div class="row-fluid"><%= f.submit (t :update), :class=> "btn btn-large btn-primary span12" %>
   <input type=button class="btn btn-large btn-primary span12" value= "<%= t :cancel%>" onclick= "cancel_button()">
   </div>
<% end %>

</br>

<%= button_to "<%= t :delete_my_account %>", :class=> "btn btn-large btn-danger span12", registration_path(resource_name), :data => { :confirm => "<%= t :are_you_sure %>" }, :method => :delete %>

<input type=button class="btn btn-large btn-primary span12" value= "<%= t :cancel%>" onclick= "cancel_button()">
<%= link_to "Back", :back %>
</div>
</div>