<div class="navbar">
	<div class="navbar-inner">
		<a class="brand" href="#"><%= t '.activity_edit' %></a>
		</ul>
	</div>
</div>
<style>
	input {
		width: 25em;
	}
	textarea {
		width: 50em;
	}
</style>

<%= render "setup_alerts" %>
<div class="well">
	<%= semantic_form_for @activity, :url => activity_edit_path do |f| %>
	<%= f.inputs do %>
	<%= hidden_field_tag :entry_id, params[:entry_id] %>
	<%= hidden_field_tag :form_id, params[:form_id] %>

	<div class="row-fluid">
		<div class="span12">
			<%= f.input :name, :input_html => { :value => @activity.name, :class => "span12" }, :label => "Name of Activity" %>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6">
			<%= f.input :project_id, :as => :select, :collection => Project.all, :selected => @activity.project_id, :input_html => { :class => "span12" }, :label => "Part of Project" %>
		</div>
		<div class="span6">
			<%= f.input :short_name, :input_html => { :value => @activity.short_name, :class => "span12" }, :label => "Short Name of Activity" %>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6">
			<%= f.input :startDate, :input_html => { :value => @activity.startDate, :class => "span4" }, :label => "Starting Date" %>
		</div>
		<div class="span6">
			<%= f.input :actualManp, :input_html => { :value => @activity.actualManp, :class => "span12" }, :label => "Actual Employee Resources (days)" %>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6">
			<%= f.input :endDate, :input_html => { :value => @activity.endDate,:class => "span4" }, :label => "Ending Date" %>
		</div>
		<div class="span6">
			<%= f.input :actualCost, :input_html => { :value => @activity.actualCost, :class => "span12" }, :label => "Actual External Costs (currency)" %>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6">
			<%= f.input :description, :input_html => { :value => @activity.description, :rows => 5, :class => "span12" }, :label => "Activity Description" %>
		</div>
		<div class="span6">
			<%= f.input :team, :input_html => { :value => @activity.team, :rows => 5, :class => "span12" }, :label => "Team Member" %>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6">
			<%= f.input :phase, :input_html => { :value => @activity.phase, :class => "span12" }, :label => "Part of Phase" %>
          <!--TODO add in phase string functionality. This will work for now.-->
		</div>
		<div class="span6">
			<%= f.input :notes, :input_html => { :value => @activity.notes, :rows => 5, :class => "span12" }, :label => "Notes" %>
		</div>
	</div>

	<% end %>

	<center>
		<div class="row-fluid">
			<%= f.action :submit, :label => "Submit Activity",:button_html => { :class=> "btn btn-primary span4" } %>
			<input type=button class="btn btn-danger span4" value= "<%= I18n.t :back%>" onclick= "history.back()">
			</input>
		</div>
	</center>

	<% end %>
</div>
