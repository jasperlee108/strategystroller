<div class="navbar">
	<div class="navbar-inner">
		<a class="brand" href="#"><%= t '.activity_form' %></a>
		</ul>
	</div>
</div>
<style>
	input {
		width: 25em;
	}
	textarea {
		width: 50em;
	}
</style>

<%= render "setup_alerts" %>
<div class="well">
	<%= semantic_form_for @activity do |f| %>
	<%= f.inputs do %>

			<%= f.input :project_id, :as => :hidden, :value => @project_id %>

	<div class="row-fluid">
		<div class="span12">
			<%= f.input :name, :required => true, :as => :string, :label => "Name of Activity", :input_html => { :class=> "span12" } %>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6">
			<%= f.input :project_id, :as => :select, :collection => Project.all, :selected => @project_id, :label => "Part of Project", :input_html => { :class=> "span12", :disabled => true } %>
		</div>
		<div class="span6">
			<%= f.input :short_name, :as => :string, :label => "Short Name of Activity", :input_html => { :class=> "span12" } %>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6">
			<%= f.input :startDate, :as => :date_select, :input_html => { :class => "span4" }, :required => true, :label => "Starting Date" %>
		</div>
		<div class="span6">
			<%= f.input :actualManp, :as => :number, :required => true, :label => "Actual Employee Resources (days)", :input_html => { :class=> "span12" } %>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6">
			<%= f.input :endDate, :as => :date_select, :input_html => { :class => "span4" }, :required => true, :label => "Ending Date" %>
		</div>
		<div class="span6">
			<%= f.input :actualCost, :as => :number, :required => true, :label => "Actual External Costs (currency)", :input_html => { :class=> "span12" } %>
		</div>
	</div>

          <div class="row-fluid">
            <div class="span4">
              <%= f.input :targetManp, :as => :number, :step => 1, :required => true, :label => "Target Manpower (Man-Months)", :input_html => { :class => "span12" } %>
            </div>
            <div class="span4">
              <%= f.input :targetCost, :as => :number, :required => true, :label => "Target External Costs (currency)", :input_html => { :class=> "span12" } %>
            </div>
            <div class="span4">
              <%= f.input :actualProg, :as => :select, :collection => [["Not Yet Started", 0], ["In Progress", 1], ["Completed", 2]], :required => true, :label => "Progress in Phase", :input_html => { :class=> "span12" } %>
            </div>
          </div>


          <div class="row-fluid">
		<div class="span6">
			<%= f.input :description, :as => :text, :input_html => { :rows => 5, :class=> "span12" }, :required => false, :label => "Activity Description" %>
		</div>
		<div class="span6">
			<%= f.input :team, :as => :text, :input_html => { :rows => 5, :class => "span12" }, :required => false, :label => "Team Member" %>
		</div>
	</div>
	
	<div class="row-fluid">
		<div class="span6">
			<%= f.input :phase, :as => :select, :collection => [["1-Concept completed", 1], ["2-Prerequisites fulfilled", 2], ["3-Implementation running", 3], ["4-Project effective", 4]], :required => true, :label => "Part of Phase", :input_html => { :class=> "span12" } %>
          <!--TODO make this collection not hard-coded, but passed up from the model-->
          <!--TODO Decide if we should put the project management option here, or elsewhere-->
		</div>
		<div class="span6">
			<%= f.input :notes, :as => :text, :input_html => { :rows => 5, :class => "span12" }, :required => false, :label => "Notes" %>
		</div>
	</div>

	<% end %>
	<center>
		<div class="row-fluid">
			<%= f.action :submit, :label => "Submit Activity",:button_html => { :class=> "btn btn-primary span4" }%>
			<input type=button class="btn btn-danger span4" value= "<%= I18n.t :cancel%>" onclick= "history.back()">
			</input>
		</div>
	</center>

	<% end %>
</div>
