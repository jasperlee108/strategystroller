<script>
	document.getElementById("home").className = "";
	document.getElementById("define_page").className = "active";
	document.getElementById("activity_define").className = "active"; 
</script>

<style>
	input {
		width: 25em;
	}
	textarea {
		width: 50em;
	}
</style>

<h2>Activity Form</h2>
<%= render "setup_alerts" %>
<body>
	<%= semantic_form_for @activity do |f| %>
	<%= f.inputs do %>

	<div class="row-fluid">
		<div class="span8">
			<%= f.input :name, :required => true, :as => :string, :label => "Name of Activity", :input_html => { :class=> "span12" } %>
		</div>
		<div class="span4">
			<%= f.input :short_name, :as => :string, :label => "Short Name of Activity", :input_html => { :class=> "span12" } %>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span12">
			<%= f.input :description, :as => :text, :input_html => { :rows => 5, :class=> "span12" }, :required => false, :label => "Activity Description" %>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span4">
			<%= f.input :project_id, :as => :select, :collection => Project.all, :required => true, :label => "Part of Project", :input_html => { :class=> "span12" } %>
		</div>
		<div class="span4">
			<%= f.input :phase, :as => :select, :collection => ["1-Concept completed", "2-Prerequisites fulfilled", "3-Implementation running", "4-Project effective"], :required => true, :label => "Part of Phase", :input_html => { :class=> "span12" } %>
		</div>
		<div class="span4">
			<%= f.input :actualProg, :as => :select, :collection => ["1-Not yet started", "2-In progress", "3-Activity completed"], :required => true, :label => "Status of Activity", :input_html => { :class=> "span12" } %>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span12">
			<div class="span6">
				<%= f.input :startDate, :as => :date_select, :input_html => { :class => "span4" }, :required => true, :label => "Starting Date" %>
			</div>
			<div class="span6">
				<%= f.input :endDate, :as => :date_select, :input_html => { :class => "span4" }, :required => true, :label => "Ending Date" %>
			</div>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span12">
			<%= f.input :team, :as => :text, :input_html => { :rows => 5, :class => "span12" }, :required => false, :label => "Team Member" %>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6">
			<div class="span6">
				<%= f.input :targetManp, :as => :number, :required => true, :label => "Planned Employee Resources (days)", :input_html => { :class=> "span12" } %>
			</div>
			<div class="span6">
				<%= f.input :targetCost, :as => :number, :required => true, :label => "Planned External Costs (currency)", :input_html => { :class=> "span12" } %>
			</div>
		</div>
		<div class="span6">
			<div class="span6">
				<%= f.input :actualManp, :as => :number, :required => true, :label => "Actual Employee Resources (days)", :input_html => { :class=> "span12" } %>
			</div>
			<div class="span6">
				<%= f.input :actualCost, :as => :number, :required => true, :label => "Actual External Costs (currency)", :input_html => { :class=> "span12" } %>
			</div>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span12">
			<div class="span6">
				<%= f.input :notes, :as => :text, :input_html => { :rows => 5, :class => "span12" }, :required => false, :label => "Notes" %>
			</div>
			<div class="span6">
				<%= f.input :statusNotes, :as => :text, :input_html => { :rows => 5, :class => "span12" }, :required => false, :label => "Notes on Status" %>
			</div>
		</div>
	</div>

	<% end %>
	<center>
		<div class="row-fluid">
			<%= f.action :submit, :label => "Submit Activity",:button_html => { :class=> "btn btn-primary span4" }%>
			<input type=button class="btn btn-danger span4" value= "<%= I18n.t :cancel%>" onclick= "history.back()">
			</input>
		</div>
	</center>

	<% end %>
</body>