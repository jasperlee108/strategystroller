<div class="navbar">
    <div class="navbar-inner">
        <a class="brand" href="#">Project Form</a>
        </ul>
    </div>
</div>
<style>

    style > input {
        width: 25em;
    }
    textarea {
        width: 50em;
    }
</style>
<%= render "setup_alerts" %>
<div class="well">

    <%= semantic_form_for @project, :url => project_check_path do |f| %>
    <%= f.inputs do %>
    <%= hidden_field_tag :entry_id, params[:entry_id] %>
    <%= hidden_field_tag :form_id, params[:form_id] %>

    <div class="row-fluid">
        <div class="span8">
            <%= f.input :name, :input_html => { :value => @current_project.name, :class => "span12", :readonly => true }, :required => true, :label => "Name of Project" %>
        </div>
        <div class="span4">
            <%= f.input :short_name, :input_html => { :value => @current_project.short_name, :class => "span12", :readonly => true }, :required => true, :label => "Short Name of Project" %>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span6">
            <%= f.input :indicator_id, :as => :select, :collection => Indicator.all, :selected => @current_project.indicator_id, :input_html => { :class => "span12", :disabled => true }, :required => true, :label => "Associated Indicator" %>
        </div>
        <div class="span6">
            <%= f.input :head_id, :as => :select, :collection => User.where(:controlling_unit => false), :selected => @current_project.head_id, :input_html => { :class => "span12", :disabled => true }, :required => true, :label => "Project Manager" %>
        </div>
    </div>



    <div class="row-fluid">
        <div class="span6">
            <table class="table table-hover table-bordered">
                <tr>
                    <th>Activity</th>
                    <th>Target Manpower</th>
                    <th>Current Manpower</th>
                    <th>Target Cost</th>
                    <th>Current Cost</th>
                    <th>Status</th>
                </tr>
        
                <% @activities.each do |a| %>
                <tr>
                    <td valign="top"><%= link_to a.name, all_activity_path(:activity_id => a.id) %></td>
                    <%= semantic_form_for a, :url => project_update_path do |f| %>
                    <td>
                        <%= f.input :targetManp, :input_html => {:readonly => true, :class => "span24" }, :label => false %>
                    </td>
                    <td>
                        <%= f.input :actualManp,:input_html => {:class => "span24"}, :label => false %>
                    </td>
                    <td>
                        <%= f.input :targetCost, :input_html => {:readonly => true, :class => "span24" }, :label => false %>
                    </td>
                    <td>
                        <%= f.input :actualCost, :input_html => {:class => "span24"},:label => false %>
                    </td>
                    <td>
                        <!-- is this the right field? -->
                        <!--Look up the collection -->
                        <%= f.input :actualProg, :input_html => {:class => "span24"}, :as => :select, :label => false %>
                    </td>
                    <% end %>

                </tr>
                <% end %>
            </table>
         </div>
         <div class="span3">
            <%= f.input :status_notes, :as => :text, :input_html => { :value => @current_project.status_notes, :rows => 2 }, :label => "Status Notes" %>
        </div>
      </div>

    <br />
    <% end %>
    <center>
        <div class="row-fluid">
            <%= f.action :submit, :label => "Confirm Project",:button_html => { :class=> "btn btn-primary span4" }%>
            <input type=button class="btn btn-danger span4" value= "<%= I18n.t :cancel%>" onclick= "history.back()">
            </input>
        </div>
            


    </center>
    
    <% end %>
</div>

