<h2>Hi Provider, <%= @user.username %>! </h2>
<%= render "setup_alerts" %>
<div class="well" style="margin-top:0px; padding:0px 10px 0px 10px;">
    <h4><u>Update Indicators</u></h4>
    <table class="table table-hover table-bordered" style="background-color:white;">
        <tr>
            <th>ID</th>
            <th>Form</th>
            <th>Due Date</th>
            <th>Recieved Date</th>
        </tr>
        <% if @indicator_forms.empty? %>
        <tr>
            <td>&ndash;</td><td>&ndash;</td><td>&ndash;</td><td>&ndash;</td>
        </tr>
        <% end %>
        <% @indicator_forms.each do |form| %>
        <tr>
            <td><%= form.id %></td>
            <td><%= link_to find_label(form.lookup, form.entry_id), find_path(form.lookup, form.entry_id, form.id) %></td>
            <td><%= form.last_reminder %></td>
            <td>&ndash;</td>
        </tr>
        <% end %>
    </table>
</div>
<div class="well" style="margin-top:0px; padding:0px 10px 0px 10px;">
    <h4><u>Saved Forms</u></h4>
    <table class="table table-hover table-bordered" style="background-color:white;">
        <tr>
            <th>ID</th>
            <th>Form</th>
            <th>Due Date</th>
            <th>Recieved Date</th>
        </tr>
        <% if @project_forms.empty? %>
        <tr>
            <td>&ndash;</td><td>&ndash;</td><td>&ndash;</td><td>&ndash;</td>
        </tr>
        <% end %>
        <% @project_forms.each do |form| %>
        <tr>
            <td><%= form.id %></td>
            <td><%= link_to find_label(form.lookup, form.entry_id), find_path(form.lookup, form.entry_id, form.id) %></td>
            <td><%= form.last_reminder %></td>
            <td>&ndash;</td>
        </tr>
        <% end %>
    </table>
</div>