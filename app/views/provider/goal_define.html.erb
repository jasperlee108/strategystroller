<div class="navbar">
	<div class="navbar-inner">
		<a class="brand" href="#"><%= t '.goal_form' %></a>
		</ul>
	</div>
</div>
<style>
	input {
		width: 25em;
	}
	textarea {
		width: 50em;
	}
</style>

<%= render "setup_alerts" %>
<div class="well">
	<%= semantic_form_for @goal, :url => goal_define_path do |f| %>
	<%= f.inputs do %>
	<%= hidden_field_tag :entry_id, params[:entry_id] %>
	<%= hidden_field_tag :form_id, params[:form_id] %>
	<div class="row-fluid">
		<div class="span8">
			<%= f.input :name, :input_html => { :value => @current_goal.name, :readonly => true, :class=> "span12" }, :label => (I18n.t :name_of_goal) %>
		</div>
		<div class="span4">
			<%= f.input :short_name, :input_html => { :value => @current_goal.short_name, :readonly => true, :class=> "span12" }, :label => (I18n.t :short_name_of_goal) %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span6">
			<%= f.input :dimension_id, :as => :select, :collection => Dimension.all, :selected => @current_goal.dimension_id, :input_html => { :disabled => true, :class=> "span12" }, :label => (I18n.t :associated_dimension) %>
		</div>
		<div class="span6">
			<%= f.input :user_id, :as => :select, :collection => User.where(:controlling_unit => false), :selected => @current_goal.user_id, :input_html => { :disabled => true, :class=> "span12" }, :label => (I18n.t :responsible) %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span8">
			<%= f.input :need, :as => :text, :input_html => { :value => @current_goal.need, :rows => 5, :class=> "span12" }, :required => true, :label => (I18n.t :call_for_action) %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span8">
			<%= f.input :justification, :as => :text, :input_html => { :value => @current_goal.justification, :rows => 5, :class=> "span12" }, :required => true, :label => (I18n.t :justification_of_specific_goal) %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span8">
			<%= f.input :focus, :as => :text, :input_html => { :value => @current_goal.focus, :rows => 5, :class=> "span12" }, :required => true, :label => (I18n.t :strategic_approach) %>
		</div>
		<div class="span4">
			<%= f.input :notes, :as => :text, :input_html => { :value => @current_goal.notes, :rows => 5, :class=> "span12" }, :required => false, :label => (I18n.t :notes) %>
		</div>
	</div>

	<% end %>

	<center>
		<div class="row-fluid">
			<%= f.action :submit, :label => (I18n.t :submit_goal),:button_html => { :class=> "btn btn-primary span4" }%>
			<%= f.action :submit, :label => (I18n.t :save_goal),:button_html => { :class=> "btn btn-primary span4" }%>
		</div>
	</center>

	<% end %>
</div>
