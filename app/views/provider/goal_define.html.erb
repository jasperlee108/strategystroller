<% content_for :context_menu do %>
<li id="goal_define">
	<a href="<%= url_for(:action => 'goal_define', :controller => 'provider') %>">Goal</a>
</li>
<li>
	<a href="<%= url_for(:action => 'indicator_define', :controller => 'provider') %>">Indicator</a>
</li>
<li>
	<a href="<%= url_for(:action => 'activity_define', :controller => 'provider') %>">Activity</a>
</li>
<% end %>

<script>
	document.getElementById("home").className = "";
	document.getElementById("define_page").className = "active";
	document.getElementById("goal_define").className = "active"; 
</script>

<style>
	input {
		width: 25em;
	}
	textarea {
		width: 50em;
	}
</style>

<h2>Goal Form</h2>
<%= render "setup_alerts" %>
<body>
	<%= semantic_form_for @goal, :url => goal_define_path do |f| %>
	<%= f.inputs do %>
	<%= hidden_field_tag :entry_id, params[:entry_id] %>
	<%= hidden_field_tag :form_id, params[:form_id] %>
	<div class="row-fluid">
		<div class="span6">
			<%= f.input :name, :input_html => { :value => @current_goal.name, :readonly => true, :class=> "span12" }, :label => "Name of Goal" %>
		</div>
		<div class="span4">
			<%= f.input :short_name, :input_html => { :value => @current_goal.short_name, :readonly => true, :class=> "span12" }, :label => "Short Name of Goal" %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span4">
			<%= f.input :dimension_id, :input_html => { :value => @current_goal.dimension_id, :readonly => true, :class=> "span12" }, :label => "Associated Dimension" %>
		</div>
		<div class="span4">
			<%= f.input :user_id, :input_html => { :value => @current_goal.user_id, :readonly => true, :class=> "span12" }, :label => "Responsible" %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span6">
			<%= f.input :need, :as => :text, :input_html => { :value => @current_goal.need, :rows => 5, :class=> "span12" }, :required => true, :label => "Call for Action" %>
		</div>
		<div class="span6">
			<%= f.input :justification, :as => :text, :input_html => { :value => @current_goal.justification, :rows => 5, :class=> "span12" }, :required => true, :label => "Justification of Specific Goal" %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span6">
			<%= f.input :focus, :as => :text, :input_html => { :value => @current_goal.focus, :rows => 5, :class=> "span12" }, :required => true, :label => "Strategic Approach" %>
		</div>
		<div class="span6">
			<%= f.input :notes, :as => :text, :input_html => { :value => @current_goal.notes, :rows => 5, :class=> "span12" }, :required => false, :label => "Notes" %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span6">
			<%= f.input :prereq, :input_html => { :value => @current_goal.prereq, :readonly => true, :class=> "span12" }, :label => "Prerequisites" %>
		</div>
		<div class="span6">
			<%= f.input :status, :input_html => { :value => @current_goal.status, :readonly => true, :class=> "span12" }, :label => "Current Status (%)" %>
		</div>
	</div>

	<% end %>

	<center>
		<div class="row-fluid">
			<%= f.action :submit, :label => "Submit Goal",:button_html => { :class=> "btn btn-primary span4" }%>
			<%= f.action :submit, :label => "Save Goal",:button_html => { :class=> "btn btn-primary span4" }%>
			</input>
		</div>
	</center>

	<% end %>
</body>