<% content_for :context_menu do %>
<li>
	<a href="<%= url_for(:action => 'goal_define', :controller => 'provider') %>">Goal</a>
</li>
<li id="indicator_define">
	<a href="<%= url_for(:action => 'indicator_define', :controller => 'provider') %>">Indicator</a>
</li>
<li>
	<a href="<%= url_for(:action => 'activity_define', :controller => 'provider') %>">Activity</a>
</li>
<% end %>
<script>
	document.getElementById("home").className = "";
	document.getElementById("define_page").className = "active";
	document.getElementById("indicator_define").className = "active"; 
</script>

<style>
	input {
		width: 25em;
	}
	textarea {
		width: 50em;
	}
</style>

<h2>Indicator Form</h2>
<%= render "setup_alerts" %>
<body>
	<%= semantic_form_for @indicator, :url => indicator_define_path do |f| %>
	<%= f.inputs do %>
	<%= hidden_field_tag :entry_id, params[:entry_id] %>
	<%= hidden_field_tag :form_id, params[:form_id] %>
	<div class="row-fluid">
		<div class="span6">
			<%= f.input :name, :input_html => { :value => @current_indicator.name, :readonly => true, :class => "span12" }, :label => "Name of Indicator" %>
		</div>
		<div class="span4">
			<%= f.input :short_name, :input_html => { :value => @current_indicator.short_name, :readonly => true, :class => "span12" }, :label => "Short Name of Indicator" %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span4">
			<%= f.input :goal_id, :input_html => { :value => @current_indicator.goal_id, :readonly => true, :class => "span12" }, :label => "Associated Goal" %>
		</div>
		<div class="span4">
			<%= f.input :user_id, :input_html => { :value => @current_indicator.user_id, :readonly => true, :class => "span12" }, :label => "Responsible" %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span12">
			<%= f.input :description, :as => :text, :input_html => { :value => @current_indicator.description, :rows => 5, :class => "span12" }, :required => true, :label => "Description of Indicator" %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span4">
			<%= f.input :source, :input_html => { :value => @current_indicator.source, :class => "span12" }, :required => true, :as => :string, :label => "Source" %>
		</div>
		<div class="span4">
			<%= f.input :unit, :input_html => { :value => @current_indicator.unit, :class => "span12" }, :required => true, :as => :string, :label => "Unit" %>
		</div>
		<div class="span4">
			<%= f.input :freq, :input_html => { :class => "span12" }, :required => true, :as => :select, :collection => options_for_select(["M", "Q", "HY", "Y"], @current_indicator.freq), :label => "Frequency of Acquisition" %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span3">
			<%= f.input :indicator_type, :input_html => { :class => "span12" }, :required => true, :as => :select, :collection => options_for_select(["Average", "Cumulative"], @current_indicator.indicator_type), :label => "Indicator Type" %>
		</div>
		<div class="span3">
			<%= f.input :dir, :input_html => { :class => "span12" }, :required => true, :as => :select, :collection => options_for_select(["More is Better", "Less is Better"], @current_indicator.dir), :label => "Target Direction" %>
		</div>
		<div class="span3">
			<%= f.input :actual, :input_html => { :value => @current_indicator.actual, :class => "span12" }, :required => true, :as => :number, :label => "Actual Values" %>
		</div>
		<div class="span3">
			<%= f.input :target, :input_html => { :value => @current_indicator.target, :class => "span12" }, :required => true, :as => :number, :label => "Target Values" %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span12">
			<%= f.input :notes, :as => :text, :input_html => { :value => @current_indicator.notes, :rows => 5, :class => "span12" }, :required => false, :label => "Notes" %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span4">
			<%= f.input :diff, :input_html => { :value => @current_indicator.diff, :readonly => true, :class => "span12" }, :label => "Difference" %>
		</div>
		<div class="span4">
			<%= f.input :status, :input_html => { :value => @current_indicator.status, :readonly => true, :class => "span12" }, :label => "Current Status" %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span12">
			<%= f.input :status_notes, :as => :text, :input_html => { :value => @current_indicator.status_notes, :rows => 5, :class => "span12" }, :required => false, :label => "Notes to Current Status" %>
		</div>
	</div>
	<% end %>
	<center>
		<div class="row-fluid">
			<%= f.action :submit, :label => "Submit Indicator",:button_html => { :class=> "btn btn-primary span4" }%>
			<%= f.action :submit, :label => "Save Indicator",:button_html => { :class=> "btn btn-primary span4" }%>
			</input>
		</div>
	</center>
	<% end %>
</body>