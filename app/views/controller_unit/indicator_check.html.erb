<% content_for :context_menu do %>
<li><a href="<%= url_for(:action => 'goal_check', :controller => 'controller_unit') %>">Goal</a></li>
<li><a href="<%= url_for(:action => 'indicator_check', :controller => 'controller_unit') %>">Indicator</a></li>
<li><a href="<%= url_for(:action => 'project_check', :controller => 'controller_unit') %>">Project</a></li>
<li><a href="<%= url_for(:action => 'activity_check', :controller => 'controller_unit') %>">Activity</a></li>
<% end %>
<style>
input {
    width:25em;
}
textarea {
    width:50em;
}
</style>

<h2>Indicator Form</h2>

<body>
    <%= flash[:notice] %>
    <%= flash[:error] %><br>

    <%= semantic_form_for @indicator, :url => indicator_check_path do |f| %>
        <%= f.inputs do %>
        <%= hidden_field_tag :entry_id, params[:entry_id] %>
        <%= hidden_field_tag :form_id, params[:form_id] %>

          <%= f.input :name, :input_html => { :value => @current_indicator.name }, :required => true, :label => "Name of Indicator" %>
          
          <%= f.input :short_name, :input_html => { :value => @current_indicator.short_name }, :required => true, :label => "Short Name of Indicator" %>

          <%= f.input :goal_id, :input_html => { :value => @current_indicator.goal_id }, :required => true, :label => "Associated Goal" %>

          <%= f.input :user_id, :input_html => { :value => @current_indicator.user_id }, :required => true, :label => "Responsible" %>
          
          <%= f.input :description, :as => :text, :input_html => { :value => @current_indicator.description, :rows => 5, :cols => 10 }, :required => true, :label => "Description of Indicator" %>
          
          <%= f.input :source, :input_html => {:value => @current_indicator.source }, :required => true, :as => :string, :label => "Source" %>
          
          <%= f.input :unit, :input_html => {:value => @current_indicator.unit }, :required => true, :as => :string, :label => "Unit" %>
          
          <%= f.input :freq,:input_html => {:value => @current_indicator.freq }, :required => true, :as => :select, :collection => ["M", "Q", "HY", "Y"], :label => "Frequency of Acquisition" %>
          
          <%= f.input :indicator_type, :input_html => {:value => @current_indicator.indicator_type }, :required => true, :as => :select, :collection => ["Average", "Cummulative"], :label => "Indicator Type" %>
          
          <%= f.input :dir, :input_html => {:value => @current_indicator.dir }, :required => true, :as => :select, :collection => ["More is Better", "Less is Better"], :label => "Target Direction" %>
          
          <%= f.input :actual, :input_html => {:value => @current_indicator.actual }, :required => true, :as => :number, :label => "Actual Values" %>
          
          <%= f.input :target, :input_html => {:value => @current_indicator.target}, :required => true, :as => :number, :label => "Target Values" %>

          <%= f.input :notes, :as => :text, :input_html => { :value => @current_indicator.notes, :rows => 5, :cols => 10 }, :label => "Notes" %>
          
          <%= f.input :diff, :input_html => { :value => @current_indicator.diff }, :required => true, :label => "Difference" %>
          
          <%= f.input :status, :input_html => { :value => @current_indicator.status }, :required => true, :label => "Current Status" %>
          
          <%= f.input :status_notes, :as => :text, :input_html => { :value => @current_indicator.status_notes, :rows => 5, :cols => 10 }, :label => "Notes to Current Status" %>
        <% end %>
    <%= f.action :submit, :label => "Confirm Indicator" %>
    <% end %>
</body>