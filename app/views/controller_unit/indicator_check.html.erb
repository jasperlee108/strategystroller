<style>
input {
    width:25em;
}
textarea {
    width:50em;
}
</style>
 <%= render "setup_alerts" %>
<div class="well">
    <%= semantic_form_for @indicator, :url => indicator_check_path do |f| %>
        <%= f.inputs do %>
        <%= hidden_field_tag :entry_id, params[:entry_id] %>
        <%= hidden_field_tag :form_id, params[:form_id] %>
<div class="row-fluid">
<div class="span6">    
          <%= f.input :name, :input_html => { :value => @current_indicator.name }, :required => true, :label => "Name of Indicator",:input_html => { :class => "span12" }  %>
 </div><div class="span4">          
          <%= f.input :short_name, :input_html => { :value => @current_indicator.short_name }, :required => true, :label => "Short Name of Indicator",:input_html => { :class => "span12" }  %>
</div></div><div class="row-fluid"><div class="span4">
          <%= f.input :goal_id, :input_html => { :value => @current_indicator.goal_id }, :required => true, :label => "Associated Goal" ,:input_html => { :class => "span12" } %>
</div>
<div class="span4"> 
          <%= f.input :user_id, :input_html => { :value => @current_indicator.user_id }, :required => true, :label => "Responsible",:input_html => { :class => "span12" }  %>
  </div>         
 </div> <div class="row-fluid"><div class="span12">            
          <%= f.input :description, :as => :text, :input_html => { :value => @current_indicator.description, :rows => 5,:class => "span12" }, :required => true, :label => "Description of Indicator" %>
   </div>  </div> 
 <div class="row-fluid"><div class="span4">           
          <%= f.input :source, :input_html => {:value => @current_indicator.source }, :required => true, :as => :string, :label => "Source",:input_html => { :class => "span12" }  %>
 </div><div class="span4">              
          <%= f.input :unit, :input_html => {:value => @current_indicator.unit }, :required => true, :as => :string, :label => "Unit",:input_html => { :class => "span12" }  %>
  
      </div>  <div class="span4">    
          <%= f.input :freq,:input_html => {:value => @current_indicator.freq }, :required => true, :as => :select, :collection => ["M", "Q", "HY", "Y"], :label => "Frequency of Acquisition" ,:input_html => { :class => "span12" } %>
   </div></div><div class="row-fluid"><div class="span3">               
          <%= f.input :indicator_type, :input_html => {:value => @current_indicator.indicator_type }, :required => true, :as => :select, :collection => ["Average", "Cummulative"], :label => "Indicator Type",:input_html => { :class => "span12" }  %>
    </div><div class="span3">             
          <%= f.input :dir, :input_html => {:value => @current_indicator.dir }, :required => true, :as => :select, :collection => ["More is Better", "Less is Better"], :label => "Target Direction",:input_html => { :class => "span12" }  %>
     </div><div class="span3">        
          <%= f.input :actual, :input_html => {:value => @current_indicator.actual }, :required => true, :as => :number, :label => "Actual Values",:input_html => { :class => "span12" }  %>
       </div><div class="span3">         
          <%= f.input :target, :input_html => {:value => @current_indicator.target}, :required => true, :as => :number, :label => "Target Values",:input_html => { :class => "span12" }  %>
</div></div>
<div class="row-fluid"><div class="span12">
          <%= f.input :notes, :as => :text, :input_html => { :value => @current_indicator.notes, :rows => 5, :class => "span12" }, :label => "Notes" %>
    </div></div>  <div class="row-fluid"><div class="span4">          
          <%= f.input :diff, :input_html => { :value => @current_indicator.diff }, :required => true, :label => "Difference",:input_html => { :class => "span12" }  %>
          </div><div class="span4">     
          <%= f.input :status, :input_html => { :value => @current_indicator.status }, :required => true, :label => "Current Status",:input_html => { :class => "span12" }  %>
            </div></div>     <div class="row-fluid"><div class="span12">   
          <%= f.input :status_notes, :as => :text, :input_html => { :value => @current_indicator.status_notes, :rows => 5, :class => "span12" }, :label => "Notes to Current Status" %>
             </div></div>  
        <% end %>
    <center><div class="row-fluid">
    <%= f.action :submit, :label => "Confirm Indicator",:button_html => { :class=> "btn btn-primary span4" }%>
    <input type=button class="btn btn-danger span4" value= "<%= I18n.t :cancel%>" onclick= "history.back()"> </input></div></center>
    <% end %>
</div>