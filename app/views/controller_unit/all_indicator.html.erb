<div class="navbar">
	<div class="navbar-inner">
		<a class="brand" href="#"><%= t '.indicator_view' %></a>
		</ul>
	</div>
</div>
<style>
	input {
		width: 25em;
	}
	textarea {
		width: 50em;
	}
</style>

<%= render "setup_alerts" %>
<div class="well">
    <%= semantic_form_for @indicator, :url => all_indicator_path do |f| %>
        <%= f.inputs do %>
        <%= hidden_field_tag :entry_id, params[:entry_id] %>
        <%= hidden_field_tag :form_id, params[:form_id] %>
	<div class="row-fluid">
		<div class="span8">        
          <%= f.input :name, :input_html => { :value => @indicator.name, :disabled => true, :class => "span12" }, :label => "Name of Indicator" %>
		</div>
		<div class="span4">          
          <%= f.input :short_name, :input_html => { :value => @indicator.short_name, :disabled => true, :class => "span12" }, :label => "Short Name of Indicator" %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span6">
          <%= f.input :goal_id, :as => :select, :collection => Goal.all, :selected => @indicator.goal_id, :input_html => { :disabled => true, :class => "span12", :multiple => true }, :label => "Associated Goals" %>
		</div>
		<div class="span6">
          <%= f.input :user_id, :as => :select, :collection => User.where(:controlling_unit => false), :selected => @indicator.user_id, :input_html => { :disabled => true, :class => "span12" }, :label => "Responsible" %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span6">          
          <%= f.input :unit, :input_html => { :value => @indicator.unit, :disabled => true, :class => "span12" }, :label => "Unit" %>
		</div>
		<div class="span6">		
			<div class="span6">          
          <%= f.input :actual, :input_html => { :value => @indicator.actual, :disabled => true, :class => "span12" }, :label => "Actual Values" %>
			</div>
			<div class="span6">          
          <%= f.input :target, :input_html => { :value => @indicator.target, :disabled => true, :class => "span12" }, :label => "Target Values" %>
			</div>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span6">          
          <%= f.input :description, :input_html => { :value => @indicator.description, :disabled => true, :class => "span12", :rows => 5 }, :label => "Description of Indicator" %>
		</div>
		<div class="span6">		
			<div class="span6">          
          <%= f.input :prognosis, :input_html => { :value => @indicator.prognosis, :disabled => true, :class => "span12" }, :label => "Prognosis" %>
			</div>
			<div class="span6">
          <%= f.input :diff, :input_html => { :value => @indicator.diff, :disabled => true, :class => "span12" }, :label => "Difference" %>
			</div>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span6">          
          <%= f.input :source, :as => :text, :input_html => { :value => @indicator.source, :disabled => true, :class => "span12", :rows => 2 }, :label => "Source" %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span6">          
          <%= f.input :freq, :input_html => { :value => @indicator.freq, :disabled => true, :class => "span12" }, :label => "Frequency of Acquisition" %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span6">
			<div class="span6">          
	          <%= f.input :indicator_type, :input_html => { :value => @indicator.indicator_type, :disabled => true, :class => "span12" }, :label => "Indicator Type" %>
			</div>
			<div class="span6">          
	          <%= f.input :dir, :input_html => { :value => @indicator.dir, :disabled => true, :class => "span12" }, :label => "Target Direction" %>
			</div>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span6">
			<div class="span6">
		  <%= f.input :random, :as => :text, :input_html => { :value => @projects, :rows => 5, :class => "span12", :disabled => true }, :label => "Associated Projects" %>
			</div>
			<div class="span6">
          <%= f.input :notes, :input_html => { :value => @indicator.notes, :disabled => true, :class => "span12", :rows => 5 }, :label => "Notes" %>
			</div>
		</div>
		<div class="span6">         
          <%= f.input :status_notes, :input_html => { :value => @indicator.status_notes, :disabled => true, :class => "span12", :rows => 5 }, :label => "Notes to Current Status" %>
		</div>
	</div>
    <% end %>
	<center>
		<div class="row-fluid">
			<input type=button class="btn btn-danger span4" value= "<%= I18n.t :back%>" onclick= "history.back()">
			</input>
		</div>
	</center>
    <% end %>
</div>
