<h2>Activity List</h2>
 
<table border=7 cellpadding=7 cellspacing=7>
  <tr>
    <th>Activity ID</th>
    <th>Link to the Activity</th>
  </tr>
 
<% @activities.each do |a| %>
  <tr>
    <td><%= a.id %></td>
    <td><%= link_to a.name, activity_path( :activity_id => a.id ) %></td>
  </tr>
<% end %>
</table>