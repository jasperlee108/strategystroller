<h2>Project</h2>

<body>
    <%= semantic_form_for @project, :url => all_project_path do |f| %>
        <%= f.inputs do %>
        <%= hidden_field_tag :entry_id, params[:entry_id] %>
        <%= hidden_field_tag :form_id, params[:form_id] %>
        
          <%= f.input :name, :input_html => { :value => @project.name, :readonly => true }, :label => "Name of Project" %>
          
          <%= f.input :short_name, :input_html => { :value => @project.short_name, :readonly => true }, :label => "Short Name of Project" %>

          <%= f.input :indicator_id, :as => :select, :collection => Indicator.all, :selected => @project.indicator_id, :input_html => { :disabled => true }, :label => "Associated Indicator" %>

          <%= f.input :head_id, :as => :select, :collection => User.all, :selected => @project.head_id, :input_html => { :disabled => true }, :label => "Project Manager" %>

          <%= f.input :steer_id, :as => :select, :collection => User.all, :selected => @project.steer_id, :input_html => {:disabled => true }, :label => "Steering Committee" %>
          
          <%= f.input :description, :input_html => { :value => @project.description, :readonly => true }, :label => "Project Description" %>
          
          <%= f.input :team, :input_html => { :value => @project.team, :readonly => true }, :label => "Team Member" %>
          
          <%= f.input :startDate, :input_html => { :value => @project.startDate, :disabled => true, :style => "width: 20%" }, :label => "Starting Date" %>
          
          <%= f.input :endDate, :input_html => { :value => @project.endDate, :disabled => true, :style => "width: 20%" }, :label => "Ending Date" %>
          
          <%= f.input :duration, :input_html => { :value => @project.duration, :readonly => true }, :label => "Project Duration (months)" %>
          
          <%= f.input :target_manp, :input_html => { :value => @project.target_manp, :readonly => true }, :label => "Planned Employee Resources (days)" %>
          
          <%= f.input :target_cost, :input_html => { :value => @project.target_cost, :readonly => true }, :label => "Planned External Costs (currency)" %>
          
          <%= f.input :inplan, :as => :boolean, :input_html => { :checked => @project.inplan, :disabled => true }, :checked_value => true, :unchecked_value => false, :label => "Included in Financial Plan" %>
          
          <%= f.input :compensation, :input_html => { :checked => @project.compensation, :disabled => true }, :checked_value => true, :unchecked_value => false,:label => "Compensation Possible" %>
          
          <%= f.input :notes, :input_html => { :value => @project.notes, :readonly => true }, :label => "Notes" %>
          
          <%= f.input :actual_manp, :input_html => { :value => @project.actual_manp, :readonly => true }, :label => "Actual Employee Resources (days)" %>
          
          <%= f.input :actual_cost, :input_html => { :value => @project.actual_cost, :readonly => true }, :label => "Actual External Costs (currency)" %>
          
          <%= f.input :status_prog, :input_html => { :value => @project.status_prog, :readonly => true }, :label => "Current Status by Progress" %>
          
          <%= f.input :status_ms, :input_html => { :value => @project.status_ms, :readonly => true }, :label => "Current Status by Milestone" %>
          
          <%= f.input :status_manp, :input_html => { :value => @project.status_manp, :readonly => true }, :label => "Current Status by Manpower Use" %>
          
          <%= f.input :status_cost, :input_html => { :value => @project.status_cost, :readonly => true }, :label => "Current Status by Cost" %>
          
          <%= f.input :status_global, :input_html => { :value => @project.status_global, :readonly => true }, :label => "Current Status Overall" %>
          
          <%= f.input :status_notes, :input_html => { :value => @project.status_notes, :readonly => true }, :label => "Notes to Current Status" %>

        <% end %>
    <% end %>
    <%= link_to "Back", :back %>
</body>