<body>
    <div class="navbar snb">
      <div class="navbar-inner ni">
        <div class="container">
          <ul class="nav isnb">
            <li><a href=<%= url_for(:action => 'set_goal', :controller => 'controller_unit') %>>Goals</a></li>
            <li><a href=<%= url_for(:action => 'set_indicator', :controller => 'controller_unit') %>>Indicators</a></li>
            <li><a href=<%= url_for(:action => 'set_project', :controller => 'controller_unit') %>>Projects</a></li>
            <li><a href=<%= url_for(:action => 'set_activity', :controller => 'controller_unit') %>>Activities</a></li>
            <li><a href=<%= url_for(:action => 'setup_system', :controller => 'controller_unit') %>>Setup System</a></li>

          </ul>
        </div>
      </div>
    </div><!-- /.navbar -->

    <%= render "setup_alerts" %>

   <%= semantic_form_for @goal, :html => { :class => "form-stacked"} do |f|%>
        <%= f.inputs do %>
<div class="row-fluid">
<div class="span4">
          <%= f.input :name, :required => true, :as => :string, :label => "Name of Goal",:input_html => { :class => "span12" }%>
</div><div class="span4">
          <%= f.input :dimension_id, :as => :select, :collection => Dimension.all, :required => true, :label => "Associated Dimension",:input_html => { :class => "span12" } %>
    </div><div class="span4">      
          <%= f.input :user_id, :as => :select, :collection => User.all, :required => true, :label => "Responsible",:input_html => { :class => "span12" } %>
</div>
</div>
<div class="row-fluid">
<div class="span6">
          <%= f.input :need, :as => :text, :input_html => { :rows => 5, :class=> "span12" }, :required => false, :label => "Call for Action" %>
 </div><div class="span6">       
          <%= f.input :justification, :as => :text, :input_html => { :rows => 5, :class=> "span12" }, :required => false, :label => "Justification of Specific Goal" %>
 </div>
 </div>
 <div class="row-fluid"> 
<div class="span6"> 
          <%= f.input :focus, :as => :text, :input_html => { :rows => 5, :class=> "span12"}, :required => false, :label => "Strategic Approach" %>
   </div> <div class="span6"> 
          <%= f.input :notes, :as => :text, :input_html => { :rows => 5, :class=> "span12"}, :required => false, :label => "Notes" %>
     </div>     
     </div>
<div class="row-fluid">
<div class="span6">     
          <%= f.input :prereq, :as => :select, :collection => Goal.select('name'), :required => false, :label => "Prerequisites",:input_html => { :class => "span12" } %>
 </div><div class="span6">    
          <%= f.input :status, :required => true, :as => :number, :label => "Current Status (%)", :input_html => { :class => "span12" }%>
 </div>          
 </div>          
        <% end %>
    <center><%= f.action :submit, :label => "Save Goal",:button_html => { :class=> "btn btn-primary span4" }%></center>
    <% end %>
</body>
