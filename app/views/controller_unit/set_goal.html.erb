<% content_for :context_menu do %>
<li><a href="<%= url_for(:action => 'setup_system', :controller => 'controller_unit') %>">Set system information</a></li>
<li><a href="<%= url_for(:action => 'set_goal', :controller => 'controller_unit') %>">New goal</a></li>
<li><a href="<%= url_for(:action => 'set_indicator', :controller => 'controller_unit') %>">New indicator</a></li>
<li><a href="<%= url_for(:action => 'set_project', :controller => 'controller_unit') %>">New project</a></li>
<% end %>

<body>
    <div class="navbar snb">
      <div class="navbar-inner ni">
        <div class="container">
          <ul class="nav isnb">
            <li><a href=<%= url_for(:action => 'set_goal', :controller => 'controller_unit') %>>Goals</a></li>
            <li><a href=<%= url_for(:action => 'set_indicator', :controller => 'controller_unit') %>>Indicators</a></li>
            <li><a href=<%= url_for(:action => 'set_project', :controller => 'controller_unit') %>>Projects</a></li>
            <li><a href=<%= url_for(:action => 'set_activity', :controller => 'controller_unit') %>>Activities</a></li>
            <li><a href=<%= url_for(:action => 'setup_system', :controller => 'controller_unit') %>>Setup System</a></li>

          </ul>
        </div>
      </div>
    </div><!-- /.navbar -->

    <%= flash[:notice] %>
    <%= flash[:error] %><br>

    <%= semantic_form_for @goal do |f| %>
        <%= f.inputs do %>


          <%= f.input :name, :required => true, :as => :string, :label => "Name of Goal" %>
          
          <%= f.input :short_name, :as => :string, :label => "Short Name of Goal" %>

          <%= f.input :dimension_id, :as => :select, :collection => Dimension.all, :required => true, :label => "Associated Dimension" %>

          <%= f.input :user_id, :as => :select, :collection => User.all, :required => true, :label => "Responsible" %>

          <%= f.input :need, :as => :text, :input_html => { :rows => 5, :cols => 10 }, :required => false, :label => "Call for Action" %>
          
          <%= f.input :justification, :as => :text, :input_html => { :rows => 5, :cols => 10 }, :required => false, :label => "Justification of Specific Goal" %>
          
          <%= f.input :focus, :as => :text, :input_html => { :rows => 5, :cols => 10 }, :required => false, :label => "Strategic Approach" %>
          
          <%= f.input :prereq, :as => :select, :collection => Goal.select('name'), :required => false, :label => "Prerequisites" %>

          <%= f.input :notes, :as => :text, :input_html => { :rows => 5, :cols => 10 }, :required => false, :label => "Notes" %>
          
          <%= f.input :status, :required => true, :as => :number, :label => "Current Status (%)" %>
          
        <% end %>
    <%= f.action :submit, :label => "Save Goal" %>
    <% end %>
</body>
