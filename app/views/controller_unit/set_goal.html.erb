	<div class="navbar-inner">
		<a class="brand" href="#">Generating New Goal</a>
		</ul>
	</div>
</div>

<%= render "setup_alerts" %>
<div class="well">
	<%= semantic_form_for @goal, :html => { :class => "form-stacked"} do |f|%>
	<%= f.inputs do %>
	
	<div class="row-fluid">
		<div class="span8">
			<%= f.input :name, :required => true, :as => :string, :label => "Name of Goal",:input_html => { :class => "span12" }%>
		</div>
		<div class="span4">
			<%= f.input :short_name, :required => true, :label => "Short Name of Goal", :input_html => { :class => "span12" } %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span6">
			<%= f.input :dimension_id, :as => :select, :collection => Dimension.all, :required => true, :label => "Associated Dimension",:input_html => { :class => "span12" } %>
		</div>
		<div class="span6">
			<%= f.input :user_id, :as => :select, :collection => User.where(:controlling_unit => false), :required => true, :label => "Responsible",:input_html => { :class => "span12" } %>
		</div>
	</div>
	<br />
	<% end %>
	<center>
		<div class="row-fluid">
			<%= f.action :submit, :label => "Submit Goal to Responsible Provider",:button_html => { :class=> "btn btn-primary span4" }%>
			<input type=button class="btn btn-danger span4" value= "<%= I18n.t :cancel%>" onclick= "history.back()">
			</input>
		</div>
	</center>
	<% end %>
</div>