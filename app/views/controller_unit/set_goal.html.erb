<div class="navbar">
	<div class="navbar-inner">
		<a class="brand" href="#"><%= t '.generating_new' %></a>
		</ul>
	</div>
</div>

<%= render "setup_alerts" %>
<div class="well">
	<%= semantic_form_for @goal, :html => { :class => "form-stacked"} do |f|%>
	<%= f.inputs do %>
	
	<%= f.input :need, :as => :hidden, :value => "Insert Call for Action" %>
	<%= f.input :justification, :as => :hidden, :value => "Insert Justification of Specific Goal" %>
	<%= f.input :focus, :as => :hidden, :value => "Insert Strategic Approach" %>
	<%= f.input :status, :as => :hidden, :value => 0 %>
	
	<div class="row-fluid">
		<div class="span8">
			<%= f.input :name, :required => true, :as => :string, :label => (I18n.t :name_of_goal),:input_html => { :class => "span12" }%>
		</div>
		<div class="span4">
			<%= f.input :short_name, :required => true, :label => (I18n.t :short_name_of_goal), :input_html => { :class => "span12" } %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span6">
			<%= f.input :dimension_id, :as => :select, :collection => Dimension.all, :required => true, :label => (I18n.t :associated_dimension),:input_html => { :class => "span12" } %>
		</div>
		<div class="span6">
			<%= f.input :user_id, :as => :select, :collection => User.where(:controlling_unit => false), :required => true, :label => (I18n.t :responsible),:input_html => { :class => "span12" } %>
		</div>
	</div>
	<br />
	<% end %>
	<center>
		<div class="row-fluid">
			<%= f.action :submit, :label => (I18n.t :submit_goal_to_responsible_provider),:button_html => { :class=> "btn btn-primary span4" }%>
			<input type=button class="btn btn-danger span4" value= "<%= I18n.t :cancel%>" onclick= "history.back()">
			</input>
		</div>
	</center>
	<% end %>
</div>