	<div class="navbar-inner">
		<a class="brand" href="#"><%= t '.generating_new_1' %></a>
		</ul>
	</div>
</div>

<%= render "setup_alerts" %>

<div class="well">
	<%= semantic_form_for @project, :html => { :class => "form-stacked"}  do |f| %>
	<%= f.inputs do %>

			<%= f.input :description, :as => :hidden, :value => "Insert Project Description" %>

	<div class="row-fluid">
		<div class="span8">
			<%= f.input :name, :as => :string, :label => (I18n.t :name_of_project),:input_html => { :class => "span12" }  %>
		</div>
		<div class="span4">
			<%= f.input :short_name, :as => :string, :label => (I18n.t :short_name_of_project),:input_html => { :class => "span12" } %>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6">
			<%= f.input :indicator_ids, :as => :select, :collection => Indicator.all, :required => true, :label => (I18n.t :associated_indicator),:input_html => { :class => "span12", :multiple => true }  %>
		</div>
		<div class="span6">
			<%= f.input :head_id, :as => :select, :collection => User.where(:controlling_unit => false), :required => true, :label => (I18n.t :project_manager),:input_html => { :class => "span12", :id=>"responsible"}  %>
		</div>
	</div>
	<br />
	<% end %>
	<center>
		<div class="row-fluid">
			<%= f.action :submit, :label => (I18n.t :submit_project_to_project_manager),:button_html => { :class=> "btn btn-primary span4" }%>
			<input type=button class="btn btn-danger span4" value= "<%= I18n.t :cancel%>" onclick= "history.back()">
			</input>
		</div>
	</center>
	<% end %>
</div>
