	<div class="navbar-inner">
		<a class="brand" href="#">Generating New Indicator</a>
		</ul>
	</div>
</div>

<%= render "setup_alerts" %>

<div class="well">

	<%= semantic_form_for @indicator do |f| %>
	<%= f.inputs do %>
	
			<%= f.input :unit, :as => :hidden, :value => "Insert Unit" %>
			<%= f.input :actual, :as => :hidden, :value => 0 %>
			<%= f.input :description, :as => :hidden, :value => "Insert Description of Indicator" %>
			<%= f.input :source, :as => :hidden, :value => "Insert Source" %>
			<%= f.input :indicator_type, :as => :hidden, :value => "Average" %>
			<%= f.input :dir, :as => :hidden, :value => "More is Better" %>
			<%= f.input :target, :as => :hidden, :value => 0 %>
			<%= f.input :diff, :as => :hidden, :value => 0 %>
			<%= f.input :status, :as => :hidden, :value => 0 %>
	
	<div class="row-fluid">
		<div class="span8">
			<%= f.input :name, :required => true, :as => :string, :label => "Name of Indicator",:input_html => { :class => "span12" }  %>
		</div>
		<div class="span4">
			<%= f.input :short_name, :as => :string, :required => true, :label => "Short Name of Indicator",:input_html => { :class => "span12" }  %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span6">
			<%= f.input :goal_id, :as => :select, :collection => Goal.all, :required => true, :label => "Associated Goal",:input_html => { :class => "span12" }  %>
		</div>
		<div class="span6">
			<%= f.input :user_id, :as => :select, :collection => User.where(:controlling_unit => false), :required => true, :label => "Responsible",:input_html => { :class => "span12" }  %>
		</div>
	</div>
	<br />
	<% end %>
	<center>
		<div class="row-fluid">
			<%= f.action :submit, :label => "Submit to Provider Responsible",:button_html => { :class=> "btn btn-primary span4" }%>
			<input type=button class="btn btn-danger span4" value= "<%= I18n.t :cancel%>" onclick= "history.back()">
			</input>
		</div>
	</center>
	<% end %>
</div>

