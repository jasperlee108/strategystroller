<div class="navbar">
	<div class="navbar-inner">
		<a class="brand" href="#"><%= t '.activity_view' %></a>
		</ul>
	</div>
</div>
<style>
	input {
		width: 25em;
	}
	textarea {
		width: 50em;
	}
</style>

<%= render "setup_alerts" %>
<div class="well">
	<%= semantic_form_for @activity, :url => all_activity_path do |f| %>
	<%= f.inputs do %>
	<%= hidden_field_tag :entry_id, params[:entry_id] %>
	<%= hidden_field_tag :form_id, params[:form_id] %>

	<div class="row-fluid">
		<div class="span12">
			<%= f.input :name, :input_html => { :value => @activity.name, :readonly => true, :class => "span12" }, :label => (I18n.t :name_of_activity) %>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6">
			<%= f.input :project_id, :as => :select, :collection => Project.all, :selected => @activity.project_id, :input_html => {:disabled => true, :class => "span12" }, :label => (I18n.t :part_of_project) %>
		</div>
		<div class="span6">
			<%= f.input :short_name, :input_html => { :value => @activity.short_name, :readonly => true, :class => "span12" }, :label => (I18n.t :short_name_of_activity) %>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6">
			<%= f.input :startDate, :input_html => { :value => @activity.startDate, :class => "span4", :disabled => true}, :label => (I18n.t :starting_date) %>
		</div>
		<div class="span6">
			<%= f.input :actualManp, :input_html => { :value => @activity.actualManp, :readonly => true, :class => "span12" }, :label => (I18n.t :actual_employee_resources_days) %>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6">
			<%= f.input :endDate, :input_html => { :value => @activity.endDate,:class => "span4", :disabled => true }, :label => (I18n.t :ending_date) %>
		</div>
		<div class="span6">
			<%= f.input :actualCost, :input_html => { :value => @activity.actualCost, :readonly => true, :class => "span12" }, :label => (I18n.t :actual_external_costs_currency) %>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6">
			<%= f.input :description, :input_html => { :value => @activity.description, :readonly => true, :rows => 5, :class => "span12" }, :label => (I18n.t :activity_description) %>
		</div>
		<div class="span6">
			<%= f.input :team, :input_html => { :value => @activity.team, :readonly => true, :rows => 5, :class => "span12" }, :label => (I18n.t :team_member) %>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span6">
			<%= f.input :phase, :input_html => { :value => @activity.phase, :readonly => true, :class => "span12" }, :label => (I18n.t :part_of_phase) %>
          <!--TODO add in phase string functionality. This will work for now.-->
		</div>
		<div class="span6">
			<%= f.input :notes, :input_html => { :value => @activity.notes, :readonly => true, :rows => 5, :class => "span12" }, :label => (I18n.t :notes) %>
		</div>
	</div>

	<% end %>

	<center>
		<div class="row-fluid">
			<input type=button class="btn btn-danger span4" value= "<%= I18n.t :back%>" onclick= "history.back()">
			</input>
		</div>
	</center>

	<% end %>
</div>
