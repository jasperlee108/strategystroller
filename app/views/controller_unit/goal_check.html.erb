<style>
input {
    width:25em;
}
textarea {
    width:50em;
}
</style>

    <%= render "setup_alerts" %>
<div class="well">


    <%= semantic_form_for @goal , :url => goal_check_path do |f| %>
        <%= f.inputs do %>
        <%= hidden_field_tag :entry_id, params[:entry_id] %>
        <%= hidden_field_tag :form_id, params[:form_id] %>
<div class="row-fluid">
<div class="span4">
          <%= f.input :name, :input_html => { :value => @current_goal.name }, :required => true, :label => "Name of Goal", :input_html => { :class => "span12" } %>
  </div><div class="span4">        
          <%= f.input :short_name, :input_html => { :value => @current_goal.short_name }, :required => true, :label => "Short Name of Goal", :input_html => { :class => "span12" } %>
    </div><div class="span4"> 
          <%= f.input :dimension_id, :input_html => { :value => @current_goal.dimension_id }, :required => true, :label => "Associated Dimension", :input_html => { :class => "span12" } %>
</div>
</div>
<div class="row-fluid">
<div class="span6">
          <%= f.input :user_id, :input_html => { :value => @current_goal.user_id }, :required => true, :label => "Responsible", :input_html => { :class => "span12" } %>
 </div><div class="span6">    
          <%= f.input :need, :as => :text, :input_html => { :value => @current_goal.need, :rows => 5, :class => "span12" }, :required => true, :label => "Call for Action" %>
 </div>
 </div>
 <div class="row-fluid"> 
<div class="span6">           
          <%= f.input :justification, :as => :text, :input_html => { :value => @current_goal.justification, :rows => 5, :class => "span12" }, :required => true, :label => "Justification of Specific Goal" %>
     </div> <div class="span6">         
          <%= f.input :focus, :as => :text, :input_html => { :value => @current_goal.focus, :rows => 5, :class => "span12" }, :required => true, :label => "Strategic Approach" %>
         </div>     
     </div>
<div class="row-fluid">
<div class="span6">           
          <%= f.input :prereq, :input_html => { :value => @current_goal.prereq, :rows => 5, :class => "span12" }, :required => true, :label => "Prerequisites" %>

          <%= f.input :notes, :as => :text, :input_html => { :value => @current_goal.notes, :rows => 5, :class => "span12" }, :label => "Notes" %>
          
          <%= f.input :status, :input_html => { :value => @current_goal.status}, :required => true, :label => "Current Status (%)", :input_html => { :class => "span12" } %>

        <% end %>
    <center><div class="row-fluid">
    <%= f.action :submit, :label => "Submit Goal to Provider Responsible",:button_html => { :class=> "btn btn-primary span4" }%>
    <input type=button class="btn btn-danger span4" value= "<%= I18n.t :cancel%>" onclick= "history.back()"> </input></div></center>
    <% end %>
 </div>