<% content_for :context_menu do %>
<li><a href="<%= url_for(:action => 'goal_check', :controller => 'controller_unit') %>">Goal</a></li>
<li><a href="<%= url_for(:action => 'indicator_check', :controller => 'controller_unit') %>">Indicator</a></li>
<li><a href="<%= url_for(:action => 'activity_check', :controller => 'controller_unit') %>">Activity</a></li>
<% end %>

<style>
input {
    width:25em;
}
textarea {
    width:50em;
}
</style>

<h2>Goal Form</h2>

<body>
    <%= flash[:notice] %>
    <%= flash[:error] %><br>

    <%= semantic_form_for @goal do |f| %>
        <%= f.inputs do %>

          <%= f.input :name, :input_html => { :value => @current_goal.name }, :required => true, :label => "Name of Goal" %>
          
          <%= f.input :short_name, :input_html => { :value => @current_goal.short_name }, :required => true, :label => "Short Name of Goal" %>

          <%= f.input :dimension_id, :input_html => { :value => @current_goal.dimension_id }, :required => true, :label => "Associated Dimension" %>

          <%= f.input :user_id, :input_html => { :value => @current_goal.user_id }, :required => true, :label => "Responsible" %>

          <%= f.input :need, :as => :text, :input_html => { :value => @current_goal.need, :rows => 5, :cols => 10 }, :required => true, :label => "Call for Action" %>
          
          <%= f.input :justification, :as => :text, :input_html => { :value => @current_goal.justification, :rows => 5, :cols => 10 }, :required => true, :label => "Justification of Specific Goal" %>
          
          <%= f.input :focus, :as => :text, :input_html => { :value => @current_goal.focus, :rows => 5, :cols => 10 }, :required => true, :label => "Strategic Approach" %>
          
          <%= f.input :prereq, :input_html => { :value => @current_goal.prereq, :rows => 5, :cols => 10 }, :required => true, :label => "Prerequisites" %>

          <%= f.input :notes, :as => :text, :input_html => { :value => @current_goal.notes, :rows => 5, :cols => 10 }, :label => "Notes" %>
          
          <%= f.input :status, :input_html => { :value => @current_goal.status}, :required => true, :label => "Current Status (%)" %>

        <% end %>
    <%= f.action :submit, :label => "Confirm Goal" %>
    <% end %>
</body>