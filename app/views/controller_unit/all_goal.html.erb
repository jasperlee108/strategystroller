<div class="navbar">
	<div class="navbar-inner">
		<a class="brand" href="#"><%= t '.goal_form_2' %></a>
		</ul>
	</div>
</div>
<style>
	input {
		width: 25em;
	}
	textarea {
		width: 50em;
	}
</style>

<%= render "setup_alerts" %>
<div class="well">

	<%= semantic_form_for @goal , :url => goal_check_path do |f| %>
	<%= f.inputs do %>
	<%= hidden_field_tag :entry_id, params[:entry_id] %>
	<%= hidden_field_tag :form_id, params[:form_id] %>
	<div class="row-fluid">
		<div class="span8">
			<%= f.input :name, :input_html => { :value => @goal.name, :class => "span12", :disabled => true }, :label => "Name of Goal" %>
		</div>
		<div class="span4">
			<%= f.input :short_name, :input_html => { :value => @goal.short_name, :class => "span12", :disabled => true }, :label => "Short Name of Goal" %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span6">
			<%= f.input :dimension_id, :as => :select, :collection => Dimension.all, :selected => @goal.dimension_id, :input_html => { :class => "span12", :disabled => true }, :label => "Associated Dimension" %>
		</div>
		<div class="span6">
			<%= f.input :user_id, :as => :select, :collection => User.where(:controlling_unit => false), :selected => @goal.user_id, :input_html => { :class => "span12", :disabled => true }, :label => "Responsible" %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span8">
			<%= f.input :need, :as => :text, :input_html => { :value => @goal.need, :rows => 5, :class => "span12", :disabled => true }, :label => "Call for Action" %>
		</div>
		<div class="span4">
			<%= f.input :random, :as => :text, :input_html => { :value => @indicators, :rows => 5, :class => "span12", :disabled => true }, :label => "Associated Indicators"  %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span8">
			<%= f.input :justification, :as => :text, :input_html => { :value => @goal.justification, :rows => 5, :class => "span12", :disabled => true }, :label => "Justification of Specific Goal" %>
		</div>
		<div class="span4">
			<%= f.input :prereq, :input_html => { :rows => 5, :class => "span12", :disabled => true, :multiple => true }, :as => :select, :collection => @prerequisites, :selected => @goal.prereq, :label => "Prerequisites" %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span8">
			<%= f.input :focus, :as => :text, :input_html => { :value => @goal.focus, :rows => 5, :class => "span12", :disabled => true }, :label => "Strategic Approach" %>
		</div>
		<div class="span4">
			<%= f.input :notes, :as => :text, :input_html => { :value => @goal.notes, :rows => 5, :class => "span12", :disabled => true }, :label => "Notes" %>
		</div>
	</div>

	<% end %>
	<center>
		<div class="row-fluid">
			<input type=button class="btn btn-danger span4" value= "<%= I18n.t :back%>" onclick= "history.back()">
			</input>
		</div>
	</center>
	<% end %>
</div>
