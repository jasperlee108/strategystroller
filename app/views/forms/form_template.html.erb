<h1> Form Template </h1>

<body>
  
    <%= semantic_form_for @form do |f| %>
        <%= f.inputs do %>
     
          <%= f.input :goal_id, :label => "Pick a Goal", :as => :select, :collection => Goal.all, :prompt => true, :required => true %>
          <%= f.input :indicator_id, :label => "Pick an Indicator", :as => :select, :collection => Indicator.all, :prompt => true, :required => true %>
          <%= f.input :project_id, :label => "Pick a Project", :as => :select, :collection => Project.all, :prompt => true, :required => true %> 

          <%= f.input :user_ids, :as => :select, :size => 25, :multiple => true, :collection => User.all, :selected => User.first, :include_hidden => false, :label => "Select Providers to send this form to (hold down ctrl to select multiple)" %>

        <% end %>
    <%= f.action :submit, :label => "Submit Form to Providers" %>
    <% end %>
</body>