<h1> Form Template </h1>

<body>
    <%= semantic_form_for @form do |f| %>
        <%= f.inputs do %>
     
          <%= f.input :goals, :label => "Pick a Goal", :as => :select, :collection => Goal.all, :prompt => true, :required => true %>
          <%= f.input :indicators, :label => "Pick an Indicator", :as => :select, :collection => Indicator.all, :prompt => true, :required => true %>
          <%= f.input :projects, :label => "Pick a Project", :as => :select, :collection => Project.all, :prompt => true, :required => true %>

        <% end %>
    <%= f.action :submit, :label => "Submit Form to Providers" %>
    <% end %>
</body>