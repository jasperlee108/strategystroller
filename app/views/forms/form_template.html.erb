<h1> Form Template </h1>

<body>
  
    <%= semantic_form_for @form do |f| %>
        <%= f.inputs do %>
     
          <%= f.input :goal_id, :label => "Pick a Goal", :as => :select, :collection => Goal.all, :prompt => true, :required => true %>
          <%= f.input :indicator_id, :label => "Pick an Indicator", :as => :select, :collection => Indicator.all, :prompt => true, :required => true %>
          <%= f.input :project_id, :label => "Pick a Project", :as => :select, :collection => Project.all, :prompt => true, :required => false %> 

          <!-- change project req to true -->
          <%= f.input :email, :label => "Enter Provider Email" %>

          <%= f.semantic_fields_for :users do |user| %>

             <%= render 'user_fields', :f => user %>
             <% end %>
            <%= link_to_add_association 'Add Actor', f, :users, :data => {"association-insertion-position" => "before", "association-insertion-node" => "this"} %>

        <% end %>
    <%= f.action :submit, :label => "Submit Form to Providers" %>
    <% end %>
</body>